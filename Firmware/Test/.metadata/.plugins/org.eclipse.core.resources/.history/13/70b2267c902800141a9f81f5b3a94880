#ifndef LEDS_H_
#define LEDS_H_

/* Variables externas */
extern uint16_t ledEstado;

/* Macros */

/*****************************************************************************/
/*	Estado del Led 
 * 	Valor		Estado					Velocidad de parpadeo(Segundos)	     */
/*	0  			Esperando clave			2							 
 * 	1			Modificando	PWM			0.2
 * 	2			Tensión estabilizada	1						   	
 *****************************************************************************/
#define ESPERANDO_CLAVE	0
#define CAMBIANDO_PWM 	1
#define TENSION_FIJA	2

/* Prototipos de función */
void Led_Estado(uint16_t estado);

#endif /* LEDS_H_ */
