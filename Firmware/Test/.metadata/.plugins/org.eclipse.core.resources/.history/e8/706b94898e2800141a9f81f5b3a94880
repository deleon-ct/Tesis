#ifndef GLOBAL_H_
#define GLOBAL_H_

/* Variables globales */
/*****************************************************************************/
/*	Esta variable sirve para indicar en un led el estado del firmware
 * 	Valor		Estado					Velocidad de parpadeo(Segundos)	     */
/*	0  			Esperando clave			2							 
 * 	1			Modificando	PWM			0.2
 * 	2			Tensión estabilizada	1						   	
 *****************************************************************************/
#define ESPERANDO_CLAVE	0
#define CAMBIANDO_PWM 	1
#define TENSION_FIJA	2

uint16_t led_Estado;



#endif /* GLOBAL_H_ */
